<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fish_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.doantruong.animatejava.FishDetails">

    <TextView
        android:id="@+id/txtTitleFish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="What Makes a Fish ?"
        android:textColor="#914b25"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/animationFish"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txtTitleFish"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:onClick="" />

    <TextView
        android:id="@+id/characterFish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animationFish"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="have fins"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/characterFish2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterFish1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="cold-blooded"
        android:textColor="#299d02"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/characterFish3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterFish2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="have a backbone"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/characterFish4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterFish3"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="use gills to breath"
        android:textColor="#0f929d"
        android:textSize="20dp"
        android:textStyle="italic" />

</RelativeLayout>
